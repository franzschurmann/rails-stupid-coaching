
<div class="container">
  <figure>
    <blockquote class="blockquote border-left">
      <p><%= params[:ask] %></p>
    </blockquote>
    <figcaption class="blockquote-footer">
      <cite title="Source Title">You</cite>
    </figcaption>
  </figure>
  <figure class="answer">
    <blockquote class="blockquote">
      <p><%= @answer %>!</p>
    </blockquote>
    <figcaption class="blockquote-footer">
      <cite title="Source Title">Your coach</cite>
    </figcaption>
  </figure>
</div>
<form action="/ask" data-turbo="false">
  <input type="text" name="ask">
  <input type="submit" value="Ask!">
</form>
<%= link_to "Ask another question", ask_path %>
